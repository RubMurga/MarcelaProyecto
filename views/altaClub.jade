extends layout
block Contenido
	div(class="col-sm-offset-4 col-sm-4")
		p(class="alert alert-success")=mensaje
		form(action="/club" method="post")
			div(class="form-group")
				label(class="control-label" for="idClub") idClub
				input(type="text" class="form-control" id="idClub" name="idClub" placeholder="idClub")
			div(class="form-group")
				label(class="control-label" for="nombre") Nombre
				input(type="text" class="form-control" id="nombre" name="nombre" placeholder="Nombre")
			div(class="form-group")
				label(class="control-label" for="direccion") Direccion
				input(type="text" class="form-control" id="direccion" name="direccion" placeholder="Direccion")
			div(class="form-group")
				label(class="control-label" for="telefono") Telefono
				input(type="text" class="form-control" id="tel" name="tel" placeholder="Telefono")
			div(class="form-group")
				label(class="control-label" for="idEdo") idEdo
				select( multiple class="form-control" id="idEdo" name="idEdo" placeholder="idEdo")
					each yo in estados
						option(value = yo.idEdo)=yo.nombre 
			div(class="form-group")
				input(type="submit" value="Enviar Club")